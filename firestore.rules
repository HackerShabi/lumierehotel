rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for rooms collection with website-specific subcollections
    match /rooms/{website}/roomData/{roomId} {
      // Allow read access to everyone for rooms
      allow read: if true;
      // Allow write access to the admin panel (no authentication required)
      allow write: if true;
    }
    
    // Rules for bookings collection with website-specific subcollections
    match /bookings/{website}/bookingData/{bookingId} {
      // Allow read access to the admin panel
      allow read: if true;
      // Allow write access to everyone (for booking form submissions) and admin panel
      allow write: if true;
    }
    
    // Rules for contacts collection with website-specific subcollections
    match /contacts/{website}/contactData/{contactId} {
      // Allow read access to the admin panel
      allow read: if true;
      // Allow write access to everyone (for contact form submissions)
      allow write: if true;
    }
    
    // Allow read/write access to the top-level documents that contain the subcollections
    match /rooms/{website} {
      allow read, write: if true;
    }
    
    match /bookings/{website} {
      allow read, write: if true;
    }
    
    match /contacts/{website} {
      allow read, write: if true;
    }
    
    // Legacy rules for backward compatibility
    match /rooms/{roomId} {
      allow read: if true;
      allow write: if true; // Allow writing to old collection during migration
    }
    
    match /bookings/{bookingId} {
      allow read: if true; // Allow reading from old collection during migration
      allow write: if true; // Allow writing to old collection during migration
    }
    
    match /contacts/{contactId} {
      allow read: if true; // Allow reading from old collection during migration
      allow write: if true; // Allow writing to old collection during migration
    }
  }
}